{
	"frameworks": "arduino",
	"platforms":
	[
		"espressif32"
	],

	"dependencies":
	[
		{ "name": "wzl-gxepd2_bw" },
		{ "name": "wzl-adafruit-gfx" },
		{ "name": "wzl-ds3232rtc" },
		{ "name": "wzl-rtc_pcf8563" },
		{ "name": "wzl-bma" },
		{ "name": "wzl-watchyresources" }
	],

	"build":
	{
		"flags":
		[
			"-Wall",
			"-Wextra",
			"-Werror"
		],

		"unflags":
		[
			"-Wno-error=deprecated-declarations",
			"-Wno-unused-but-set-variable",
			"-Wno-unused-function",
			"-Wno-unused-variable",
			"-Wno-unused-parameter",
			"-Wno-implicit-fallthrough"
		]
	}
}
