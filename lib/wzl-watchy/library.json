{
	"name": "wzl-watchy",
	"version": "0.0.1",
	"description": "Forked from: Watchy - An Open Source E-Paper Watch by SQFMI",

	"authors":
	[
		{
			"name": "SQFMI",
			"url": "https://github.com/sqfmi"
		},
		{
			"name": "NoodleCollie",
			"url": "https://github.com/noodlecollie"
		}
	],

	"frameworks": "arduino",
	"platforms":
	[
		"espressif32"
	],

	"dependencies":
	[
		{ "name": "wzl-wifimanager" },
		{ "name": "wzl-ntpclient" },
		{ "name": "wzl-arduino_json" },
		{ "name": "wzl-gxepd2_bw" },
		{ "name": "wzl-adafruit-gfx" },
		{ "name": "wzl-ds3232rtc" },
		{ "name": "wzl-rtc_pcf8563" },
		{ "name": "wzl-bma" }
	],

	"build":
	{
		"flags":
		[
			"-Wall",
			"-Wextra",
			"-Werror"
		],

		"unflags":
		[
			"-Wno-error=deprecated-declarations",
			"-Wno-unused-but-set-variable",
			"-Wno-unused-function",
			"-Wno-unused-variable",
			"-Wno-unused-parameter",
			"-Wno-implicit-fallthrough"
		]
	}
}
